<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_edit_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_edit_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/titlebarcolor"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/edit_password"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_text_size" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_height"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <!--old password-->
        <TextView
            android:id="@+id/tv_old_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/old_password"
            android:textColor="@color/bottom_gray"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edt_old_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_old_password"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/old_password_hint"
            android:inputType="textMultiLine"
            android:textColorHint="@color/edt_hint"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/edt_old_password"
            android:background="@color/gray_bg" />

        <!--new password-->
        <TextView
            android:id="@+id/tv_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_old_password"
            android:layout_marginTop="15dp"
            android:text="@string/new_password"
            android:textColor="@color/bottom_gray"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edt_new_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_new_password"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/new_password_hint"
            android:inputType="textMultiLine"
            android:textColorHint="@color/edt_hint"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/edt_new_password"
            android:background="@color/gray_bg" />

        <!--re password-->
        <TextView
            android:id="@+id/tv_re_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_new_password"
            android:layout_marginTop="15dp"
            android:text="@string/re_new_password"
            android:textColor="@color/bottom_gray"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edt_re_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_re_password"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/re_new_password_hint"
            android:inputType="textMultiLine"
            android:textColorHint="@color/edt_hint"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/edt_re_password"
            android:background="@color/gray_bg" />

        <Button
            android:id="@+id/btn_edit_password"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="38dp"
            android:background="@drawable/shape_button3"
            android:text="@string/edit_password"
            android:textColor="@color/white" />


    </RelativeLayout>

</RelativeLayout>