<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_copy_mnemonic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_copy_mnemonic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/titlebarcolor"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/backup"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_text_size" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_height">

        <TextView
            android:id="@+id/tv_coye_mnemonic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp"
            android:text="@string/copy_mnemonic"
            android:textColor="@color/titlebarcolor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_copy_mnemonic_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_coye_mnemonic"
            android:layout_marginLeft="58dp"
            android:layout_marginRight="58dp"
            android:layout_marginTop="10dp"
            android:text="@string/copy_mnemonic_details"
            android:textColor="@color/bottom_gray"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_mnemonic"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_below="@+id/tv_copy_mnemonic_details"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:background="@color/gray_bg"
            android:paddingBottom="17dp"
            android:paddingLeft="43dp"
            android:paddingRight="43dp"
            android:paddingTop="17dp"
            android:textColor="@color/bottom_gray" />


        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="38dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/shape_button"
            android:text="@string/next"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>