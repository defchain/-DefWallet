<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg">


    <RelativeLayout
        android:id="@+id/rl_main_title"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:background="@color/titlebarcolor">

        <ImageView
            android:id="@+id/img_deflogo"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tv_deflogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dp"
            android:text="@string/deflogo"
            android:textColor="#929eaa"
            android:textSize="@dimen/total_assets_text" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_main_function"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_main_title"
        android:background="@color/gray_bg"
        android:orientation="vertical">

    </LinearLayout>


</RelativeLayout>
