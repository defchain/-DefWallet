<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:minHeight="62dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingLeft="13dp"
    android:paddingRight="13dp">

    <ImageView
        android:id="@+id/iv_tansaction"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY" />


    <TextView
        android:id="@+id/tv_transaction_address"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_tansaction"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textColor="@color/titlebarcolor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_transaction_time"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/iv_tansaction"
        android:textColor="@color/bottom_gray"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_transaction_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/receive_color"
        android:textSize="18sp" />


</RelativeLayout>